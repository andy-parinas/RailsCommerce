<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Shop</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <%= link_to "New Order",  new_order_path, class: "btn btn-sm btn-outline-secondary"  %>

        </div>
    </div>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-md-7">
      
            <div class="card bg-light mb-3">
            <div class="card-header"><h5>Order Transactions Today</h5></div>
            <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <tr>
                        <th>Order Number</th>
                        <th> Total </th>
                        <th> Date </th>
                    </tr>

                    <% @orders.each do |order| %>
                        <tr>
                            <td><%= order.order_number %></td>
                            <td><%= number_to_currency order.total %></td>
                            <td><%= order.created %></td>
                        </tr>
                    <% end %>
                </table>

            </div>
            </div>
            </div>
    
    </div>

    <div class="col-md-5">
        <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header"><h5>Total Sales Today</h5></div>
            <div class="card-body">
                <h4 class="card-title">$150.00</h4>
            </div>
        </div>  
    </div>
</div>



