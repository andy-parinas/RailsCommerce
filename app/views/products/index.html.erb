<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Products</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <%= link_to "New Product",  new_product_path, class: "btn btn-sm btn-outline-secondary"  %>

        </div>
    </div>
</div>


<p id="notice"><%= notice %></p>

<div class="input-group mb-3">
    <input type="text" class="form-control" 
            placeholder="Enter Product Name or UPC" aria-label="Product Name or UPC" aria-describedby="button-addon2">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="button-addon2">Search</button>
    </div>
</div>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Upc</th>
      <th>  
        <%= link_to th_helper("Product Name", @dir_params, @sort_column == "name"), 
          products_path(sort: "name", dir: @dir_params) %>
      </th>
      <th>
        <%= link_to th_helper("Price", @dir_params,  @sort_column == "price" ), 
        products_path(sort: "price", dir: @dir_params) %>
      </th>
      <th>Tax (%)</th>
      <th></th>
    </tr>
  </thead>

  <tbody id="products">
    <%= render @products %>
  </tbody>
</table>

<div id="paginator">
     <%= paginate @products %>

</div>

<hr>

<%= params[:page] %>