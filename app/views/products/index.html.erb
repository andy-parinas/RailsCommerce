<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Products</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <%= link_to "New Product",  new_product_path, class: "btn btn-sm btn-outline-secondary"  %>

        </div>
    </div>
</div>


<p id="notice"><%= notice %></p>

<div class="input-group mb-3">
    <input type="text" class="form-control" 
            placeholder="Enter Product Name or UPC" aria-label="Product Name or UPC" aria-describedby="button-addon2">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="button-addon2">Search</button>
    </div>
</div>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Upc</th>
      <th>Name</th>
      <th>Price</th>
      <th>Tax (%)</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.upc, product %></td>
        <td><%= link_to product.name, product %></td>
        <td><%= number_to_currency product.price %></td>
        <td><%= product.tax * 100 %></td>
        <td>
          <%= link_to 'Edit', edit_product_path(product), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
