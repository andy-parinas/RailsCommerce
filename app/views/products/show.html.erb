<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Product Detail</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <%= link_to "Edit",  edit_product_path(@product), class: "btn btn-sm btn-outline-secondary"  %>
            <%= link_to "Back",  products_path, class: "btn btn-sm btn-outline-secondary"  %>
        </div>
    </div>
</div>

<p id="notice"><%= notice %></p>

    <div class="row no-gutters border rounded  shadow">
        <div class="col-md-6">
            <%= image_tag @product.image , width: 500  if !@product.image.nil? %>
        </div>
        <div class="col-md-6 p-4">
          <h4 class="d-inline-block mb-2 text-primary"><%= @product.upc %></h4>
          <h3 class="mb-0"><%= @product.name %></h3>
          <br/>
          <p class="mb-0"><strong>Price:</strong> <%= number_to_currency @product.price %> </p>
          <p class="mb-0"><strong>Tax:</strong> <%=  @product.tax * 100  %>%</p>
          <br/>
          <p class="card-text mb-auto"><strong>Description:</strong></p>
          <p class="card-text mb-auto"><%= @product.description %></p>
        </div>
        
      </div>

