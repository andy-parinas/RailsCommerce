<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Order Detail</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <%= link_to "Edit",  edit_order_path(@order), class: "btn btn-sm btn-outline-secondary"  %>
            <%= link_to "Back",  orders_path, class: "btn btn-sm btn-outline-secondary"  %>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card border-secondary mb-3">
            <div class="card-header"><%= @order.order_number %></div>
            <div class="card-body text-secondary">
                <p class="card-text">
                    <strong>Total:</strong>
                    <%= number_to_currency @order.total %>
                </p>
                <p class="card-text">
                    <strong>Date:</strong>
                    <%= @order.created %>
                </p>
                 <p class="card-text">
                    <strong>Status:</strong>
                    <%= @order.status %>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card border-secondary mb-3">
            <div class="card-header">Order Items</div>
            <div class="card-body text-secondary">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Qty</th>
                            <th>Disc.(%)</th>
                            <th>Tax</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @order.order_items.each do |item| %>
                            <tr>
                                <td><%= item.product.name %></td>
                                <td><%= item.quantity %></td>
                                <td><%= item.discount * 100 %></td>
                                <td><%= number_to_currency item.total_tax %></td>
                                <td><%= number_to_currency item.subtotal %></td>                                
                            </tr>
                        <% end %>
                        <tr>
                            <td><strong>Total</strong></td>
                            <td><strong><%= @order.item_count %></strong></td>
                            <td><strong>Total Discount</strong></td>
                            <td><strong>Total Tax</strong></td>
                            <td><strong><%= @order.total %></strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>