<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Order Number: <small><%= @order.order_number %></small></h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <%= link_to "Cancel Order", @order, method: :delete, class: "btn btn-sm btn-outline-danger zbtn-inline" %>
            <%= form_for @order do |f| %>
                <%= f.hidden_field :completed, value: true %>
                <%= f.submit "Complete Order", class: "btn btn-sm btn-outline-primary zbtn-inline" %>
            <% end %>
        </div>
    </div>
</div>

<div class="row">


</div>


<p id="notice"><%= notice %></p>


<div class="row">
    <div class="col-md-4 order-md-2 mb-4" id="order-summary">
        <%= render partial: "summary", locals: {order: @order} %>
    </div>

    <div class="col-md-8 order-md-1">
        <div class="input-group mb-3">
            <input type="text" class="form-control" 
                    placeholder="Enter Product Name or UPC" aria-label="Product Name or UPC" aria-describedby="button-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2">Search</button>
            </div>
        </div>
       
        <%= render partial: "shared/products_order", locals:{products: @products, order_item: @order_item} %>

    </div>

</div>




<hr>