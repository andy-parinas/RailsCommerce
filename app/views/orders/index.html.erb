<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Orders</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <%= link_to "New Order",  new_order_path, class: "btn btn-sm btn-outline-secondary"  %>
        </div>
    </div>
</div>
<p id="notice"><%= notice %></p>

<div class="input-group mb-3">
    <input type="text" class="form-control" 
            placeholder="Search for Order Number" aria-label="Product Name or UPC" aria-describedby="button-addon2">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="button-addon2">Search</button>
    </div>
</div>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Order Number</th>
      <th>Total</th>
      <th>Status</th>
      <th>Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td><%= link_to order.order_number, order %></td>
                <td><%= order.total %></td>
                <td><%= order.completed? ? "Completed" : "Cancelled" %></td>
                <td><%= order.created %></td>
                <td>
                    <%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
                </td>
            </tr>
        <% end %>
  </tbody>
</table>